{
  "name": "hubspot-billing-updater",
  "version": "1.0.0",
  "description": "conexión a API de hubspot para actualizar fecha y mensaje de aviso de facturación",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "vercel dev",
    "run:billing": "node ./src/runBilling.js",
    "run:won": "node ./src/runBilling.js --allWon",
    "test:idempotency": "node ./src/__tests__/ticketKeyIdempotency.js",
    "cron": "node ./src/jobs/cronDealsBatch.js",
    "cron:pretty": "node -e \"process.env.PRETTY_LOGS='true'; import('./src/jobs/cronDealsBatch.js')\""
  },
  "overrides": {
    "strip-json-comments": "4.0.0"
  },
  "dependencies": {
    "@hubspot/api-client": "^13.4.0",
    "@logtail/node": "^0.5.6",
    "@logtail/pino": "^0.5.7",
    "axios": "^1.7.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pino": "^10.3.1"
  },
  "devDependencies": {
    "pino-pretty": "^13.1.3"
  }
}
